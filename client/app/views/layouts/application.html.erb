<!DOCTYPE html>
<html>
<head>
  <title>Oauth2Client</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<hr>
<% if logged_in? %>
  <%= current_user.email %> (ID: <%= current_user.id %>) - <%= link_to 'Logout', logout_path %>
<% else %>
  User not logged in - <%= link_to 'Authorize!', authorize_url %>
<% end %>
<hr>

<%= yield %>

</body>
</html>
